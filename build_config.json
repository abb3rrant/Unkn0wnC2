{
  "project": {
    "name": "Unkn0wnC2",
    "version": "0.2.0",
    "description": "DNS-based Command & Control Framework"
  },
  "server": {
    "bind_addr": "172.26.13.62",
    "bind_port": 53,
    "server_address": "98.90.218.70",
    "domain": "secwolf.net",
    "ns1": "ns1.secwolf.net",
    "ns2": "ns2.secwolf.net",
    "forward_dns": true,
    "upstream_dns": "8.8.8.8:53",
    "debug": false
  },
  "client": {
    "server_domain": "secwolf.net",
    "dns_server": "",
    "query_type": "TXT", 
    "encoding": "aes-gcm-base36",
    "timeout": 10,
    "max_command_length": 400,
    "retry_attempts": 3,
    "sleep_min": 60,
    "sleep_max": 120,
    "exfil_jitter_min_ms": 10000,
    "exfil_jitter_max_ms": 30000,
    "exfil_chunks_per_burst": 5,
    "exfil_burst_pause_ms": 120000
  },
  "stager": {
    "jitter_min_ms": 1000,
    "jitter_max_ms": 2000,
    "chunks_per_burst": 5,
    "burst_pause_ms": 12000,
    "retry_delay_seconds": 3,
    "max_retries": 5
  },
  "security": {
    "encryption_key": "MySecretC2Key123!@#DefaultChange"
  },
  "build": {
    "output_dir": "build",
    "targets": {
      "server": {
        "linux": {
          "enabled": true,
          "output": "dns-server-linux"
        }
      },
      "client": {
        "windows": {
          "enabled": true,
          "output": "dns-client-windows.exe"
        },
        "linux": {
          "enabled": true,
          "output": "dns-client-linux"
        }
      }
    }
  }
}